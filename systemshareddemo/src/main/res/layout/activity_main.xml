<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.systemshareddemo.MainActivity">

    <Button
        android:onClick="share_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Txt" />

    <Button
        android:onClick="share_txtfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share TxtFile" />


    <Button
        android:onClick="share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Image" />

    <Button
        android:onClick="share_moreimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share More Image" />

    <Button
        android:onClick="share_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Zip" />
</LinearLayout>
